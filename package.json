    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^16.4.5",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.2.5",
    "start-server-and-test": "^2.0.3",
    "typescript": "^5.3.3",
    "vite": "^6.3.6",
    "vitest": "^3.2.4",
