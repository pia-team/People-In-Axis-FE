    "@mui/material": "^5.15.10",
    "@mui/x-data-grid": "^6.19.4",
    "@mui/x-date-pickers": "^6.19.4",
    "@reduxjs/toolkit": "^2.2.1",
    "@sentry/react": "^7.114.0",
    "@tanstack/react-query": "^5.22.2",
