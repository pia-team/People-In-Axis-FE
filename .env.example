# API Configuration
# Local development: http://localhost:8080/api
# Production: https://people-in-axis-api.dnext-pia.com/api
VITE_API_BASE_URL=http://localhost:8080/api

# UI Base URL (optional, for redirects)
VITE_UI_BASE_URL=http://localhost:3000

# Keycloak Configuration
VITE_KEYCLOAK_URL=http://localhost:8180
VITE_KEYCLOAK_REALM=orbitant-realm
VITE_KEYCLOAK_CLIENT_ID=orbitant-ui-client

# Authentication
# Set to "true" to enable authentication, "false" or leave empty to disable
VITE_AUTH_ENABLED=true

# Keycloak Redirect (optional)
VITE_KEYCLOAK_REDIRECT_URI=
VITE_KEYCLOAK_REDIRECT_PATH=

# API Performance Tuning (optional)
# Deduplication window in milliseconds (default: 250)
VITE_API_DEDUP_MS=250
# Idempotency TTL in milliseconds (default: 5000)
VITE_API_IDEMP_TTL_MS=5000

# Sentry Configuration (optional)
VITE_SENTRY_DSN=
VITE_RELEASE=

# API Version (optional)
VITE_API_VERSION=
